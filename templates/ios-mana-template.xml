<config-template xmlns="http://tail-f.com/ns/config/1.0"
                 servicepoint="ios-mana">
  <devices xmlns="http://tail-f.com/ns/ncs">
  <device>
    <name>{/device}</name>
      <config>
        <logging xmlns="urn:ios">
          <buffered>
            <buffer-size>64000</buffer-size>
            <severity-level>informational</severity-level>
          </buffered>
          <event>
            <link-status>
              <default/>
            </link-status>
          </event>
          <hostname>
            <host>{/server}</host>
          </hostname>
          <hostname>
            <host>on</host>
          </hostname>
          <source-interface>
            <name>loopback0</name>
          </source-interface>
          <trap>informational</trap>
        </logging>
        <snmp-server xmlns="urn:ios">
          <community>
            <name>{/rocommunity}</name>
            <access-list-name>ro</access-list-name>
          </community>
          <community>
            <name>{/rwcommunity}</name>
            <access-list-name>rw</access-list-name>
          </community>
          <ifindex>
            <persist/>
          </ifindex>
        </snmp-server>
      </config>
  </device>
  </devices>
</config-template>
